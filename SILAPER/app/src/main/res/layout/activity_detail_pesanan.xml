<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:orientation="vertical"
    tools:context=".pemesanan.FormPemesanan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Detail Pemesanan"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="50dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:text="Nama Pemesan"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txnamapemesan"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorWhite"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:text="Nama Barang"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txnamabarang"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorWhite"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:text="Harga Barang"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txhargabarang"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorWhite"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:text="Jumlah Pembelian"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.45"
                        android:id="@+id/txqtybeli"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorWhite"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:text="Total Bayar"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txtotal"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:text="Rp 0"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorWhite"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:text="Alamat Pengiriman"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/txalamatview"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorWhite"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:text="Catatan"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txcatatanview"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorWhite"
                />

            <LinearLayout
                android:id="@+id/panelcatatanadmin"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:text="Catatan Admin"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txcatatanadmin"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/garispanelcatatanadmin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorWhite"
                android:orientation="vertical" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:text="Status"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txtstatus"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorWhite"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:text="Tujuan Pembayaran"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txdatabank"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorWhite"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:text="Bukti Bayar"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/imgbukti"
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorWhite"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="Konfirmasi Pembayaran"
                android:background="@drawable/round_bg_hijau"
                android:id="@+id/btnkonfirbayar"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="Batalkan Pesanan"
                android:background="@drawable/round_bg"
                android:id="@+id/btnbatalkan"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>